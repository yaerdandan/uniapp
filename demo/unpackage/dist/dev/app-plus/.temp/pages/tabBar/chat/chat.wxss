}
.status_bar {
  height: var(--status-bar-height);
  width: 100%;
}
.top_view {
  height: var(--status-bar-height);
  width: 100%;
  position: fixed;
  top: 0;
}
.title {
  width: 100%;
  height: 60rpx;
  margin-top: 15rpx;
