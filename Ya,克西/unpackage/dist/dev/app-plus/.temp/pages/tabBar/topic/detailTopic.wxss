
.status_bar {
  height: var(--status-bar-height);
  width: 100%;
}
.top_view {
  height: var(--status-bar-height);
  width: 100%;
  position: fixed;
  top: 0;
}
.topic {
  display: block;
  margin: 0 auto;
  margin-top: 20rpx;
  width: 95%;
}
.topicTitle1 {
  position: absolute;
  top: 160rpx;
  width: 300rpx;
  height: 60rpx;
}
.topicContent {
  width: 100%;
  border: 1px solid gray;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  position: relative;
}
.topicUser {
  margin: 0 auto;
  margin-top: 20rpx;
  width: 95%;
  height: 100rpx;
  position: relative;
}
.topicUserImg {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.topicUsername {
  position: relative;
  top: -30rpx;
  left: 20rpx;
  font-size: 37rpx;
}
.topicTimeImg {
  width: 28rpx;
  height: 28rpx;
  position: absolute;
  top: 45rpx;
  left: 470rpx;
}
.Time {
  position: absolute;
  top: 40rpx;
  left: 520rpx;
  font-size: 30rpx;
}
.topicTextbox {
  margin: 0 auto;
  width: 95%;
  margin-top: 80rpx;
}
.topicTextContent {
  font-size: 30rpx;
}
.topicContentImg {
  display: inline-block;
}
.topicContentImg_1 {
  margin-top: 20rpx;
  width: 200rpx;
  height: 300rpx;
  margin-left: 20rpx;
}
.result {
  margin: 0 auto;
  margin-top: 20rpx;
  width: 95%;
  height: 80rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
  justify-content: space-between;
}
.resultStar {
  width: 160rpx;
  height: 80rpx;
}
.resultStar_1 {
  width: 240rpx;
  height: 80rpx;
  position: relative;
}
.resultStarImg {
  margin-top: 10rpx;
  width: 60rpx;
  height: 60rpx;
}
.resultStarText,
.resultStarComment {
  position: relative;
  left: 30rpx;
  top: -15rpx;
  font-size: 30rpx;
  color: gray;
}
.resultStarText1 {
  color: rgb(17, 212, 254);
}
.resultTrampText {
  text-align: center;
  display: block;
  margin-top: -55rpx;
  font-size: 30rpx;
  color: gray;
}
.resultTrampleImg,
.resultTopImg {
  width: 60rpx;
  height: 60rpx;
  margin-top: 10rpx;
}
.resultTopImg {
  position: absolute;
  top: 0px;
  right: 0;
}
.fhImg {
  width: 30rpx;
  height: 60rpx;
  position: absolute;
  top: 80rpx;
  left: 30rpx;
}
.regText {
  text-align: center;
  display: block;
  margin: 0 auto;
  margin-top: 30rpx;
  line-height: 60rpx;
}
.content {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  border-top: 1px solid lightgray;
  background: #FFFFFF;
}
.text {
  position: fixed;
  bottom: 30rpx;
  left: 30rpx;
  font-size: 35rpx;
  color: gray;
}
._textarea {
  display: inline-block;
  border: 1px solid lightgray;
  width: 410rpx;
  height: 70rpx;
  margin: 12rpx 0 0 115rpx;
  border-radius: 15rpx;
  font-size: 40rpx;
  paddding-left: 20rpx;
}
.photo {
  position: fixed;
  bottom: 24rpx;
  left: 550rpx;
  width: 60rpx;
  height: 60rpx;
  background: #F5F5F5;
}
.btnImg {
  position: fixed;
  bottom: 13rpx;
  right: 14rpx;
  width: 120rpx;
  height: 80rpx;
}
._ul {
  list-style-type: none;
}
.box {
  position: fixed;
  width: 100%;
}
.comment {
  border: 1px solid;
  height: 180rpx;
  border-radius: 20rpx;
  position: relative;
  margin-top: 20rpx;
}
.commentImg {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  position: absolute;
  top: 10rpx;
  left: 20rpx;
}
.commentName {
  position: absolute;
  top: 10rpx;
  left: 160rpx;
}
.commentTime {
  position: absolute;
  top: 10rpx;
  left: 460rpx;
  font-size: 30rpx;
  color: gray;
}
.commentContent {
  width: 500rpx;
  position: absolute;
  top: 65rpx;
  left: 160rpx;
  font-size: 35rpx;
  word-break: break-all;
  overflow: auto;
}